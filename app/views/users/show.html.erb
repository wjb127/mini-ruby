<div class="min-h-screen bg-gradient-to-br from-purple-50 to-indigo-100 py-12">
  <div class="max-w-2xl mx-auto px-4">
    <!-- 헤더 -->
    <div class="text-center mb-12">
      <div class="mx-auto h-24 w-24 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-full flex items-center justify-center mb-6">
        <svg class="h-12 w-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">프로필</h1>
      <p class="text-gray-600 text-lg">계정 정보</p>
    </div>

    <!-- 프로필 카드 -->
    <div class="bg-white shadow-2xl rounded-2xl p-8 mb-8">
      <div class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- 이메일 -->
          <div class="bg-gray-50 rounded-lg p-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">이메일</label>
            <div class="flex items-center">
              <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
              <span class="text-gray-900 font-medium"><%= @user.email %></span>
            </div>
          </div>

          <!-- 사용자명 -->
          <div class="bg-gray-50 rounded-lg p-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">사용자명</label>
            <div class="flex items-center">
              <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span class="text-gray-900 font-medium"><%= @user.full_name %></span>
            </div>
          </div>

          <!-- 가입일 -->
          <div class="bg-gray-50 rounded-lg p-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">가입일</label>
            <div class="flex items-center">
              <svg class="h-5 w-5 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="text-gray-900 font-medium"><%= @user.created_at.strftime("%Y년 %m월 %d일") %></span>
            </div>
          </div>

          <!-- 할일 통계 -->
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">할일 통계</label>
            <div class="flex items-center">
              <svg class="h-5 w-5 text-blue-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              <div class="text-sm text-gray-700">
                <span class="font-semibold text-blue-600">전체: <%= @user.todos.count %>개</span> | 
                <span class="font-semibold text-green-600">완료: <%= @user.todos.completed.count %>개</span> | 
                <span class="font-semibold text-yellow-600">대기: <%= @user.todos.pending.count %>개</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 통계 카드들 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-lg p-6 text-center">
        <div class="bg-blue-100 rounded-full p-3 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
          <svg class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= @user.todos.count %></h3>
        <p class="text-gray-600">전체 할일</p>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 text-center">
        <div class="bg-green-100 rounded-full p-3 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
          <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= @user.todos.completed.count %></h3>
        <p class="text-gray-600">완료된 할일</p>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 text-center">
        <div class="bg-yellow-100 rounded-full p-3 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
          <svg class="h-8 w-8 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= @user.todos.pending.count %></h3>
        <p class="text-gray-600">대기중인 할일</p>
      </div>
    </div>

    <!-- 메인으로 돌아가기 버튼 -->
    <div class="text-center">
      <%= link_to "← 메인으로 돌아가기", root_path, 
          class: "bg-gradient-to-r from-purple-500 to-indigo-600 text-white font-bold py-4 px-8 rounded-lg hover:from-purple-600 hover:to-indigo-700 transition-all duration-200 transform hover:scale-105 inline-block" %>
    </div>
  </div>
</div>
